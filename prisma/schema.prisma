generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id
  name          String
  email         String    @unique
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  sessions      Session[]
  accounts      Account[]
  verified      Boolean   @default(false)

  role        ROLE
  isOnboarded Boolean
  Shop        Shop?   @relation
  Cart        Cart[]

  @@map("user")
}

model Session {
  id        String   @id
  userId    String
  token     String
  expiresAt DateTime
  ipAddress String?
  createdAt DateTime
  userAgent String?
  updatedAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

model Shop {
  id     String @id @default(cuid())
  name   String
  logo   String
  banner String

  description String
  location    String @default("")
  contact     String @default("")
  socialLinks Json

  ownerId  String?   @unique
  owner    User?     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  products Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@map("shop")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  images      String[]
  gender      GENDER   @default(unisex)
  sizes       SIZE[]   @default([])
  price       String
  inStock     Boolean  @default(true)
  tags        String[]

  shopId String
  shop   Shop   @relation(fields: [shopId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Cart      Cart[]

  @@map("product")
}

model Cart {
  id       String @id @default(cuid())
  quantity Int

  userId    String
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("cart")
}

enum ROLE {
  customer
  admin
  creator
}

enum GENDER {
  male
  female
  unisex
}

enum SIZE {
  XS
  S
  M
  L
  XL
  XXL
}
