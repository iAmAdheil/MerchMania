generator client {
    provider = "prisma-client-js"
    output   = "../app/generated/prisma"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id       String @id @default(cuid())
    type     ROLE   @default(CUSTOMER)
    username String
    email    String @unique
    password String
    Shop     Shop?
}

model Shop {
    id       String    @id @default(cuid())
    name     String
    user     User      @relation(fields: [userId], references: [id])
    userId   String    @unique
    products Product[]
}

model Product {
    id          String   @id @default(cuid())
    name        String
    description String
    tags        String[]
    shopId      String
    shop        Shop         @relation(fields: [shopId], references: [id])
}

enum ROLE {
    CUSTOMER
    ADMIN
    CREATOR
}
